<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras.Views.NovoProduto"
             Title="NovoProduto">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Salvar" Clicked="ToolbarItem_Clickedd"/>
    </ContentPage.ToolbarItems>
    <VerticalStackLayout Spacing="10" Padding="10">
        <Label Text="descrição do produto"/>
        <Entry x:Name="txt_descricao"/>
        
        <Label Text="quantidade do produto"/>
        <Entry x:Name="txt_quantidade" Keyboard="Numeric"/>

        <Label Text="preço unitario"/>
        <Entry x:Name="txt_preco" Keyboard="Numeric"/>
    </VerticalStackLayout>
</ContentPage>